@{
    ViewData["Title"] = "Access Denied";
}

<h2>@ViewData["Title"]</h2>

<p><b>Claims:</b></p>
<ul>
    @foreach (var claim in User.Claims.OrderBy(x => x.Type))
    {
        <li>
            Type: <code>@claim.Type</code>
            <ul>
                <li>
                    Value: <code>@claim.Value</code>
                </li>
                <li>
                    Hashed value: <code>@AllowListAuthorizationHandler.HashValue(claim.Value)</code>
                </li>
            </ul>
        </li>
    }
</ul>
